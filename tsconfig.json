{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*" : ["./src/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./gatsby-config.ts",
    "./plugins/**/*"
  ]
}
